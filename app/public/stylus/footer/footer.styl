.footer
  span(1)
  background-color $headerWhite

.footer__content
  span(1)
  center($webWidth/1.5)
  padding-top 36px
  padding-bottom @padding-top

  +below($mobileWidth)
    center($mobileWidth)

.footer__links-container
  span(.6)

  +between($mobileWidth, 750px)
    span(1)
    stack()

  +below($mobileWidth)
    span(1)
    stack()

  &--app
    span(.4)

    +between($mobileWidth, 750px)
      span(1)
      stack()

    +below($mobileWidth)
      span(1)
      stack()


.footer__link
  color $gray
  font-size 16px
  text-align left
  margin-bottom 10px
  span(1)
  stack()
  padding-left 36px

  +below($mobileWidth)
    padding-left 0px
    font-size 20px
    padding-top 5px
    padding-bottom 5px

  &:hover
    color $darkRed

.footer__links-column
  box-sizing border-box
  col(1/3)
  border-right 1px solid $lightGray

  +below($mobileWidth)
    col(1)
    stack()
    text-align center
    border-right none

  button:last-of-type
    margin-bottom 0px

    +below($mobileWidth)
      margin-bottom 10px

  &--first button
    padding-left 0px

  &--last button
    +between($mobileWidth, 750px)
      box-sizing border-box

  &--last
    +between($mobileWidth, 750px)
      border-right none

.footer__app-link-container
  span(1)
  padding-left 36px

  +between($mobileWidth, 750px)
    padding-left 0px
    stack()
    center(214px)
    margin-top 40px

  +below($mobileWidth)
    padding-left 0px
    stack()
    center(214px)
    margin-top 20px

.footer__app-link

  &--image, &--text
    cursor pointer

  &--image
    col(.2)
    margin-right 12px
    width 29px
    height 60px
    image('footer_mobile_icon')

  &--text
    col(.8)

  &--title, &--description
    line-height 22px
    font-size 16px
    color $gray

  &--title
    margin-top -6px
    margin-bottom 6px

  &--description
    font-weight 300
