.menubar

  .menubar__content
    span(1)
    margin-top 29px

  .menubar__hero
    span(1)
    stack()
    text-align center

  .menubar__hero-image
    width 130px
    height @width
    border-radius (@width/2)
    border solid 2px $white

  .menubar__links
    span(1)
    stack()
    padding 0px

  .menubar__link
    cursor pointer
    span(1)
    stack()
    box-sizing border-box
    padding 10px 40px
    transition background-color .1s ease-in-out

    &:hover
      background-color $darkRed

  .menubar__link-icon
    display inline-block
    margin-right 20px
    margin-bottom -2px
    width 20px
    height 20px

    &--notifications
      image('menubar_notifications_icon')

    &--assignments
      image('menubar_assignments_icon')

    &--profile
      image('menubar_profile_icon')

    &--settings
      image('menubar_settings_icon')

    &--logout
      image('menubar_logout_icon')

  .menubar__link-text
    color $white
    font-size 20px
    font-weight 300
    line-height 30px
