triangle-after(direction = 'bottom', color = #000)
  directions = {
    up: {
      content: ""
      display: block
      width: 0
      height: 0
      margin-left: -500px
      border-left: 500px solid transparent
      border-right: 500px solid transparent
      border-bottom: 500px solid color
    },
    right: {
      content: ""
      display: block
      width: 0
      height: 0
      margin-top: -500px
      margin-left:  -500px
      border-top: 500px solid transparent
      border-bottom: 500px solid transparent
      border-left: 500px solid color
    },
    down: {
      content: ""
      display: block
      width: 0
      height: 0
      margin-left: -500px
      margin-top: -500px
      border-left: 500px solid transparent
      border-right: 500px solid transparent
      border-top: 500px solid color
    },
    left: {
      content: ""
      display: block
      width: 0
      height: 0
      margin-top: -500px
      border-top: 500px solid transparent
      border-bottom: 500px solid transparent
      border-right: 500px solid color
    },
    upRight: {
      content: ""
      display: block
      width: 0
      height: 0
      margin-left: -500px
      margin-top: -500px
      border-left: 500px solid transparent
      border-top: 500px solid color
    },
    downRight: {
      content: ""
      display: block
      width: 0
      height: 0
      margin-top: -500px
      border-top: 500px solid transparent
      border-right: 500px solid color
    },
    downLeft: {
      content: ""
      display: block
      width: 0
      height: 0
      border-right: 500px solid transparent
      border-bottom: 500px solid color
    },
    upLeft: {
      content: ""
      display: block
      width: 0
      height: 0
      margin-left: -500px
      border-bottom: 500px solid transparent
      border-left: 500px solid color
    }
  }
  styles = directions[direction]
  {styles}

triangle(width = 50%, height = 50%, direction = 'bottom', color = #000)
  box-sizing: content-box

  directions = {
    up: {
      width: width/2
      height: 0
      padding-left: width/2
      padding-bottom: width/2
      overflow: hidden
    },
    right: {
      width: 0
      height: 0
      padding-top: height/2
      padding-bottom: height/2
      padding-left: height/2
      overflow: hidden
    },
    down: {
      width: width/2
      height: 0
      padding-left: width/2
      padding-top: width/2
      overflow: hidden
    },
    left: {
      width: width/2
      height: 0
      padding-top: width/2
      padding-bottom: width/2
      overflow: hidden
    },
    upRight: {
      width: 0
      height: 0
      padding-left: width
      padding-top: width
      overflow: hidden
    },
    downRight: {
      width: width
      height: 0
      padding-top: width
      overflow: hidden
    },
    downLeft: {
      width: width
      height: 0
      padding-bottom: width
      overflow: hidden
    },
    upLeft: {
      width: 0
      height: 0
      padding-bottom: width
      padding-left: width
      overflow: hidden
    }
  }
  styles = directions[direction]
  &:after
    triangle-after(direction, color)
  {styles}

image(name, type = 'png')
  background-image url(pathjoin('../images', name + '.' + type))
  background-repeat no-repeat
  background-position center

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args
