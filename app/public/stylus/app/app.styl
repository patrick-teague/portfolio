@require 'normalize'

html
  width 100%
  height 100%

body
  margin 0
  font-family 'Open Sans'
  font-weight 400
  background-color $white
  height 100%
  width 100%

  *
    box-sizing content-box

a
  text-decoration none

button
  cursor pointer
  padding 0
  outline 0
  background none
  border 0

ul
  list-style none

#application__header
  position absolute
  z-index 3
  width 100%
  height $headerHeight
  top 0px
  left 0px

#application__content
  position absolute
  z-index 2
  width 100%
  height 100%
  margin-left 0px
  transition margin-left $menubarSlideTime ease-in-out

  &.application__content--slide
    margin-left -($menubarWidth)

    +below($mobileWidth)
      margin-left -250px

#application__menubar
  position fixed
  visibility hidden
  z-index 1
  box-sizing border-box
  height 100%
  width $menubarWidth
  margin-left -($menubarWidth)
  left 100%
  padding-top $headerHeight
  border-left solid 2px $darkRed
  background-color $red
  transition visibility 0s ease-in-out $menubarSlideTime

  &.application__menubar--slide
    visibility visible
    transition-delay 0s

  +below($mobileWidth)
    width 250px
    margin-left -250px

#application__modals
  visibility hidden
  opacity 0
  position fixed
  z-index 100
  top 0px
  left 0px
  width 100%
  height 100%
  transition visibility 0s ease-in-out 0.3s
  transition opacity 0.3s ease-in-out

  &.application__modals--show
    visibility visible
    opacity 1
    transition-delay 0s

.text
  &--red
    color $red
  &--blue
    color $blue
  &--green
    color $green
  &--yellow
    color $yellow

.page
  background-color $white

.page__section
  span(1)
  center($webWidth)

.page__section-title
  span(1)
  stack()
  padding-bottom 8px
  margin-bottom 26px
  color $gray
  font-size 30px
  text-align left
  border-bottom solid 1px $gray

.page__section-content
  span(1)
  stack()
